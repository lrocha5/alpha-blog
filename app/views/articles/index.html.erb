<div class="container">
    <div class="spacer-40"></div>
    <h1>All articles</h1>
    <div class="spacer-40"></div>
    <table class="table">

        <thead>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </thead>

        <tbody>
            <% @articles.sort{|a,b| b <=> a}.each do |article| %>
                <tr>
                    <td>
                        <h5>
                            <%= article.title %>
                        </h5>

                    </td>
                    <td>
                        <%= article.description %>
                    </td>
                    <td>
                        <%= link_to "Read", article, class: 'btn btn-primary' %>
                        <%= button_to "Delete", article_path(article), method: :delete, class: 'btn btn-danger' %>
                    </td>
                </tr>
            <% end %>

        </tbody>
    </table>

    
</div>
