

<section>

    <div class="container">
        <div class="spacer-40"></div>

        <div class="index__heading-wrapper">
            <h1>All articles</h1>
            <%= link_to 'Create a new article', new_article_path(@article), class: 'btn btn-primary' %>


        </div>
        <div class="spacer-40"></div>


        <div class="row row-cols-1 row-cols-md-3 g-4">
            <% @articles.sort{|a,b| b <=> a}.each do |article| %>
                <div class="col">
                    <div class="card h-100">

                        <div class="card-body">
                            <h5 class="card-title">
                                <%= article.title %>
                            </h5>
                            <p class="card-text">
                                <%= article.description %>
                            </p>
                            <div class="spacer-20"></div>

                            <div class="vertical-8">
                                <%= link_to "Read", article, class: 'btn btn-outline-primary btn-sm' %>
                                <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-outline-warning btn-sm' %>
                                <%= button_to "Delete", article_path(article), method: :delete, class: 'btn btn-outline-danger btn-sm' %>
                            </div>

                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                <%= article.updated_at %>
                            </small>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>

    <div class="spacer-40"></div>

</section>
